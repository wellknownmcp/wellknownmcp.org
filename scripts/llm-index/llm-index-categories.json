      "sort_by": ["relevance_to_intent", "interactivity", "priority"],
      "max_concurrent": 2,
      "fallback_strategy": "suggest_alternatives"
    },
    "depth_first": {
      "description": "Prioritize comprehensive content for deep learning",
      "sort_by": ["authoritativeness", "completeness", "cross_references"],
      "max_concurrent": 1,
      "fallback_strategy": "maintain_context"
    },
    "freshness_prioritized": {
      "description": "Show newest and most relevant content first",
      "sort_by": ["recency", "community_engagement", "relevance"],
      "max_concurrent": 4,
      "fallback_strategy": "show_cached_with_staleness_warning"
    }
